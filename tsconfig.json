{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "paths": {
      "~/*": ["./*"],
      "@src/*": ["src/*"],
      "@actions/*": ["src/actions/*"],
      "@helpers": ["src/helpers/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
