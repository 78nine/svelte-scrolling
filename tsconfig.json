{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
