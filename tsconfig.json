{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
