{
  "name": "svelte-smartscroll",
  "version": "0.1.0",
  "description": "A smart scrolling Svelte plugin",
  "author": "Valmisson Grizorte",
  "license": "MIT",
  "svelte": "src/index.ts",
  "main": "dist/svelte-smartscroll.umd.js",
  "module": "dist/svelte-smartscroll.es.js",
  "scripts": {
    "build": "vite build",
    "lint": "eslint src/**/*.{js,ts,svelte}",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@svitejs/vite-plugin-svelte": "^0.11.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "lint-staged": "^10.5.4",
    "svelte": "^3.35.0",
    "typescript": "^4.2.4",
    "vite": "^2.1.2",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts,svelte}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/valmisson/svelte-smartscroll.git"
  },
  "bugs": {
    "url": "https://github.com/valmisson/svelte-smartscroll/issues"
  },
  "homepage": "https://github.com/valmisson/svelte-smartscroll#README",
  "keywords": [
    "svelte",
    "smartscroll"
  ],
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/svelte-smartscroll.es.js",
      "require": "./dist/svelte-smartscroll.umd.js"
    }
  }
}
